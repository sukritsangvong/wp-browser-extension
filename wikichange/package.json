{
    "name": "wikichange",
    "description": "An extension to add insights to your Wikipedia experience",
    "version": "1.0.0",
    "homepage": "http://chrome.google.com/webstore",
    "author": "Carleton College CS Comps team",
    "repository": {
        "type": "git",
        "url": "https://github.com/sukritsangvong/wp-browser-extension"
    },
    "scripts": {
        "start": "xt-build -e dev -w",
        "start:firefox": "xt-build -e dev -p firefox -w",
        "build": "xt-build -e prod",
        "build:firefox": "xt-build -e prod -p firefox",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test",
        "sync": "xt-sync"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintIgnore": [
        "test/**/*"
    ],
    "devDependencies": {
        "extension-cli": "latest"
    },
    "xtdocs": {
        "source": {
            "include": [
                "README.md",
                "src"
            ]
        }
    },
    "xtbuild": {
        "js_bundles": [
            {
                "name": "background",
                "src": "./src/background.js"
            },
            {
                "name": "content",
                "src": "./src/content/root.js"
            },
            {
                "name": "popup",
                "src": "./src/popup/popup.js"
            },
            {
                "name": "options",
                "src": "./src/options/options.js"
            }
        ]
    },
    "dependencies": {
        "chart.js": "^3.9.1",
        "chartjs-chart-sankey": "^0.8.1"
    }
}
